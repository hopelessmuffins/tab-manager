{
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Create folders for collections of your chrome tabs to view, edit, and revisit later.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": ["tabs", "activeTab", "storage"],
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "images/bear_icon16.png",
      "32": "images/bear_icon32.png",
      "48": "images/bear_icon48.png",
      "128": "images/bear_icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/bear_icon16.png",
    "32": "images/bear_icon32.png",
    "48": "images/bear_icon48.png",
    "128": "images/bear_icon128.png"
  }
}

